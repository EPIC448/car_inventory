<div class = "card">

   <div class= "card-body">

    <h2 class='card-title d-flex justify-content-between mb-4'>
    <span> Dealerships</span>
    <%= link_to 'New Dealership', new_dealership_path, class:'btn btn-primary' %>
    </h2>
   
   <%# render each dealership in its own card 29:02  %>
   <%@dealerships.each do | dealership|%>
    <%= link_to dealership do %>
    <div class="card project-card">
      <div class="card-body">
        <h5 class='card-titel'><%= dealership.name%></h5>
        <p><%= dealership.address%></p>

      </div>
    </div>
    <%end%> 
   <%end%>

   </div>

</div>

